{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@interfaces/*": ["./src/modules/interfaces/*"],
      "@packages/*": ["./src/modules/packages/*"]
    }
  }
}
